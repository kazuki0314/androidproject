<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hctitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="637dp"
        android:fontFamily="@font/rammetto_one"
        android:text="Help Center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fqtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="278dp"
        android:layout_marginBottom="597dp"
        android:fontFamily="@font/eb_garamond"
        android:text="FAQ"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="546dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/faqanswer"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="246dp"
        android:longClickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@android:layout/simple_dropdown_item_1line" />

    <Button
        android:id="@+id/fbbutton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="278dp"
        android:layout_height="62dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="526dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="157dp"
        android:background="@color/design_default_color_background"
        android:singleLine="false"
        android:text="Feedback   >"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/spbutton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="277dp"
        android:layout_height="63dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="589dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="85dp"
        android:background="@color/design_default_color_on_primary"
        android:text="Support      >"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <ImageButton
        android:id="@+id/faqbkButton"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="360dp"
        android:layout_marginBottom="734dp"
        android:backgroundTint="#FFEBEE"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</androidx.constraintlayout.widget.ConstraintLayout>